@{
    ViewBag.Title = "AboutUs";
}
<link rel="stylesheet" href="/css/site.css">
<script src="/js/site.js"></script>

<!-- Add a navbar at the top -->
<div class="navbar">
    <a href="@Url.Action("Index", "Home")">Home</a>
    <a href="@Url.Action("Services", "Home")">Services</a>
    <a href="@Url.Action("Details", "Home")">Details</a>
    <a href="@Url.Action("AboutUs", "Home")">AboutUs</a>
</div>

<!-- Main content inside a container -->
<div class="container">
    <h1>About Us</h1>
    <p>Meet our team of authors and their expertise:</p>

    <!-- Author Section -->
    <div class="author-section">
        <!-- Author 1 -->
        <div class="author-card">
            <img src="@Url.Content("~/images/author1.jpg")" alt="Author 1">
            <h3>Author 1</h3>
            <p>Author 1 is an expert in telecommunications and has been with our company for over 10 years. They specialize in mobile networks and customer relations.</p>
        </div>

        <!-- Author 2 -->
        <div class="author-card">
            <img src="@Url.Content("~/images/author2.jpg")" alt="Author 2">
            <h3>Author 2</h3>
            <p>Author 2 is our lead technical writer and specializes in high-speed internet and advanced networking solutions. They are a valuable asset to our team.</p>
        </div>

        <!-- Author 3 -->
        <div class="author-card">
            <img src="@Url.Content("~/images/author3.jpg")" alt="Author 3">
            <h3>Author 3</h3>
            <p>Author 3 is an experienced professional in streaming and TV packages. They provide insightful recommendations and exceptional customer support.</p>
        </div>

        <!-- Author 4 -->
        <div class="author-card">
            <img src="@Url.Content("~/images/author4.jpg")" alt="Author 4">
            <h3>Author 4</h3>
            <p>Author 4 is our expert in business communication solutions. They help our clients improve productivity with customized plans and cutting-edge technology.</p>
        </div>
    </div>
</div>

@* <!-- CSS styles for the page -->
<style>
    /* General styles */
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f0f8ff; /* Light blue background color */
        color: #333;
        text-align: center;
    }

    /* Navbar styles */
    .navbar {
        width: 100%;
        background-color: #ff7f50; /* Coral color */
        padding: 10px 0;
        position: fixed;
        top: 0;
        left: 0;
        z-index: 1000;
    }

    /* Navbar link styles */
    .navbar a {
        color: white;
        text-decoration: none;
        margin: 0 20px;
        font-weight: bold;
        font-size: 18px;
    }

    /* Container styles */
    .container {
        max-width: 800px;
        margin: 100px auto;
        padding: 20px;
        background-color: #fff0f5; /* Lavender blush background color */
        border-radius: 12px; /* Rounded corners */
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
    }

    /* Author section styles */
    .author-section {
        display: flex;
        justify-content: space-around;
        margin: 20px 0;
        text-align: left;
    }

    /* Author card styles */
    .author-card {
        width: 22%; /* Each author card takes about a quarter of the width */
        padding: 10px;
        background-color: white;
        border-radius: 8px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    /* Author image styles */
    .author-card img {
        width: 100%;
        border-radius: 8px;
    }

    /* Responsive styling */

</style>
 *@